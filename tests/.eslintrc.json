{
    "extends": ["@exabyte-io/eslint-config"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "babelOptions": {
            "configFile": ".babelrc"
        }
    },
    "globals": {
        "exabrowser": "readonly",
        "browser": "readonly",
        "$": "readonly"
    },
    "rules": {
        "func-names": "off",
        "radix": "off"
    }
}
